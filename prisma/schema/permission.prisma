model Permission {
    id                   String                @id @default(uuid())
    name                 String                @unique
    moderatorPermissions ModeratorPermission[]

    @@map("permissions")
}

model ModeratorPermission {
    moderatorId  String
    permissionId String

    moderator  Moderator  @relation(fields: [moderatorId], references: [id], onDelete: Cascade)
    permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

    @@id([moderatorId, permissionId])
    @@index([moderatorId])
    @@index([permissionId])
    @@map("moderator_permissions")
}
